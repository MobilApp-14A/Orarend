<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Orarend.Pages.OrarendHozzaadasa"
             xmlns:costum_components="clr-namespace:Orarend.Components"
             Title="OrarendHozzaadasa"
             x:Name="this"
             BindingContext="{x:Reference this}">
    <FlexLayout>
        <Frame>
            <Frame.GestureRecognizers>
                <SwipeGestureRecognizer Direction="Right" Swiped="SwipeGestureRecognizer_RightSwiped"/>
                <SwipeGestureRecognizer Direction="Left" Swiped="SwipeGestureRecognizer_LeftSwiped"/>
            </Frame.GestureRecognizers>
            <Grid>
        <VerticalStackLayout HorizontalOptions="Center" x:Name="orarend">
                <Label Text="{Binding nap}"/>
                <costum_components:UjOra_Component/>
                <costum_components:UjOra_Component/>
                <costum_components:UjOra_Component/>
                <costum_components:UjOra_Component/>
                <costum_components:UjOra_Component/>
                <costum_components:UjOra_Component/>
                <costum_components:UjOra_Component/>
                <costum_components:UjOra_Component/>
                <costum_components:UjOra_Component/>
            </VerticalStackLayout>
        </Grid>
        </Frame>
    </FlexLayout>
</ContentPage>